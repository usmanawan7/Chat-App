
<section class="h-100 gradient-form" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="card rounded-3 text-black">
          <div class="row g-0">
            <div class="col-lg-6">
              <div class="card-body p-md-5 mx-md-4">

                <div class="text-center">
                  <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp"
                    style="width: 185px;" alt="logo">
                  <h4 class="mt-1 mb-5 pb-1">We are The Lotus Team</h4>
                </div>

                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <p>Please Register your account</p>

                  <div data-mdb-input-init class="form-outline mb-4">
                      <label class="form-label" for="email">
                        Email Address
                      </label>
                      <%= f.email_field :email, autofocus: true, autocomplete: "email",  class:"form-control", id:"email"%>
                  </div>

                  <div data-mdb-input-init class="form-outline mb-4">
                    <label class="form-label" for="password">
                      Password
                      <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                      <% end %><br />
                    </label>
                    <%= f.password_field :password, autocomplete: "new-password", class:"form-control", id:"password" %>
                  </div>


                  <div data-mdb-input-init class="form-outline mb-4">
                    <label class="form-label" for="password-confirmation">
                      Password Confirmation
                    </label>
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", id:"password-confirmation" %>
                  </div>


                  <div class="text-center pt-1 mb-5 pb-1">
                      <%= f.submit "Register", class: "btn btn-primary btn-block fa-lg gradient-custom-2 mb-3", style: "width: 100%; margin-bottom: 3px;" %>
                  </div>

                  <div class="d-flex align-items-center justify-content-center pb-4">
                    <p class="mb-0 me-2 mr-3">Have an account?</p>
                    <%= link_to new_session_path(resource_name), class: "btn btn-outline-danger", "data-mdb-button-init": true, "data-mdb-ripple-init": true do %>
                      Log in
                    <% end %>
                  </div>

                <% end %>

              </div>
            </div>
            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
              <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                <h4 class="mb-4">We are more than just a company</h4>
                <p class="small mb-0">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                  tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud
                  exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
